  Vagrant.configure("2") do |config|
    # Use the Ubuntu 20.04 (Focal Fossa) box
    config.vm.box = "geerlingguy/ubuntu2004"
  
    # Configure network settings for easy access
    config.vm.network "private_network", type: "dhcp"

    # Forward port 3000 from VM to host
    config.vm.network "forwarded_port", guest: 3000, host: 3000
  
    # Provisioning with Ansible
    config.vm.provision "ansible" do |ansible|
      ansible.playbook = "playbook.yaml"
      ansible.inventory_path = "inventory"
      ansible.compatibility_mode = "2.0"
    end
  
    # Provisioning with Docker
    config.vm.provision :docker
  
    # Provisioning with Docker Compose
    config.vm.provision :docker_compose do |compose|
      compose.yml = "/vagrant/docker-compose.yaml"
      compose.rebuild = true
    end
  
    # Optional: Sync folder for easy access and development
    config.vm.synced_folder ".", "/vagrant", type: "virtualbox"
  end
  